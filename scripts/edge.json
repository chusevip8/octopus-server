[
  {
    "app": {
      "name": "Octopus 浏览器",
      "packageName": "com.octopus.browser"
    },
    "activities": [
      {
        "title": "启动页面",
        "className": "com.octopus.start.Activity",
        "views": [
          {
            "title": "启动",
            "type": "view",
            "value": "",
            "event": {
              "yesEvent": {
                "type": "launch",
                "value": "scheme://${postLink}",
                "next": "1001"
              }
            }
          }
        ]
      }
    ]
  },
  {
    "app": {
      "name": "小红书",
      "packageName": "com.xingin.xhs"
    },
    "activities": [
      {
        "title": "启动页面",
        "className": "com.octopus.start.Activity",
        "views": [
          {
            "title": "等待-0",
            "type": "view",
            "value": "",
            "event": {
              "yesEvent": {
                "type": "wait",
                "value": "2000",
                "next": "1003"
              }
            }
          }
        ]
      },
      {
        "title": "详情页面",
        "className": "com.xingin.matrix.notedetail.NoteDetailActivity",
        "views": [
          {
            "title": "作者-0",
            "type": "view",
            "value": "",
            "match": {
              "by": "class",
              "value": "android.widget.Button",
              "index": 1
            },
            "condition": {
              "type": "contains",
              "match": "des",
              "value": "作者,"
            },
            "event": {
              "yesEvent": {
                "type": "click",
                "value": "",
                "next": ""
              }
            }
          },
          {
            "title": "等待-1",
            "type": "view",
            "value": "",
            "event": {
              "yesEvent": {
                "type": "wait",
                "value": "2000",
                "next": ""
              }
            }
          },
          {
            "title": "更新界面-2",
            "type": "update",
            "value": "",
            "event": {
              "yesEvent": {
                "type": "",
                "value": "",
                "next": ""
              }
            }
          },
          {
            "title": "作者ID-3",
            "type": "view",
            "value": "",
            "match": {
              "by": "class",
              "value": "android.widget.TextView",
              "index": 1
            },
            "condition": {
              "type": "contains",
              "match": "text",
              "value": "小红书号"
            },
            "event": {
              "yesEvent": {
                "type": "extract",
                "value": "collect://map/text/posterId",
                "next": ""
              }
            }
          },
          {
            "title": "作者名称-4",
            "type": "view",
            "value": "",
            "match": {
              "by": "class",
              "value": "android.widget.TextView",
              "index": 0
            },
            "event": {
              "yesEvent": {
                "type": "extract",
                "value": "collect://map/text/poster",
                "next": ""
              }
            }
          },
          {
            "title": "返回-5",
            "type": "view",
            "value": "",
            "event": {
              "yesEvent": {
                "type": "back",
                "value": "",
                "next": ""
              }
            }
          },
          {
            "title": "等待-6",
            "type": "view",
            "value": "",
            "event": {
              "yesEvent": {
                "type": "wait",
                "value": "2000",
                "next": ""
              }
            }
          },
          {
            "title": "更新界面-7",
            "type": "update",
            "value": "",
            "event": {
              "yesEvent": {
                "type": "",
                "value": "",
                "next": ""
              }
            }
          },
          {
            "title": "文章标题/描述-8",
            "type": "view",
            "value": "",
            "match": {
              "by": "class",
              "value": "android.widget.TextView",
              "index": 1
            },
            "event": {
              "yesEvent": {
                "type": "extract",
                "value": "collect://map/text/postTitle",
                "next": ""
              }
            }
          },
          {
            "title": "评论按钮-9",
            "type": "view",
            "value": "",
            "match": {
              "by": "class",
              "value": "android.view.ViewGroup",
              "index": 0,
              "deep": "child://3"
            },
            "condition": {
              "type": "equals",
              "match": "des",
              "value": "评论 0"
            },
            "event": {
              "yesEvent": {
                "type": "error",
                "value": "没有评论",
                "next": ""
              },
              "noEvent": {
                "type": "click",
                "value": "",
                "next": "1001"
              }
            }
          }
        ]
      }
    ]
  }
]